<% if @category %>
    <hr>
    <h2>My <%= @category.name %> Instruments: </h2>
<% else %>
    <hr>
    <h2>My Instruments: </h2>
<% end %>

<% @instruments.each do |i| %>
    <%= link_to i.name, instrument_path(i) %><br>
<% end %>
<br>
